&mikrobus_spi {
	status = "okay";

	lsm6dsl@0 {
		compatible = "st,lsm6dsl";
		reg = <0>;
		spi-max-frequency = <1000000>;
		int-gpios = <&mikrobus_header 7 GPIO_ACTIVE_LOW>;
		status = "okay";
	};
};
